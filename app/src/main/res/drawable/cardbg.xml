<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient android:angle="-45" android:endColor="@color/endCardColor"
                android:centerColor="@color/centerCardColor"
                android:startColor="@color/startCardColor" />
            <gradient android:angle="45" android:endColor="@color/startCardColor"
                android:centerColor="@color/centerCardColor"
                android:startColor="@color/endCardColor" />
        </shape>
    </item>
</selector>