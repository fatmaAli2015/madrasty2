<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yourname="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activities.Categories.FinancialCentreActivity">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/linearCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/call" />

            <com.example.fatmaali.madrasty2.Utilities.FontTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:text="@string/call"
                android:textColor="@color/colorTextC"
                android:textSize="15dp"

                yourname:customFont="bukra_medium.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/message" />

            <com.example.fatmaali.madrasty2.Utilities.FontTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:text="@string/message"
                android:textColor="@color/colorTextC"
                android:textSize="15dp"
                yourname:customFont="bukra_medium.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/bg"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>